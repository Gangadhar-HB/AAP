[Name]
name = {{ vm_name }}
host = {{ vm_name }}

[Image]
image = /usr/local/lib/Prebuilt_kodiak/{{ F5image }}

[Memory]
ram = {{ vm_ram }}

[CPU]
cpu = {{ vm_cpu }}
max_cpu = {{ vm_cpu }}
cpu_set = auto

[Partitions]
part0 = /dev/{{ vg_name | default('vg01') }}/{{ vm_name }}_part:{{ vm_disk_size }}G

[Cloudinit]
cloudinitpath_f5 = /configdrives/configdrive_{{ vm_name }}.iso

[Bridges]
{% for bridges,mac in bridgeList| zip(macList) %}
bridge{{loop.index0}} = {{ bridges}},{{ mac }}
{% endfor %}
