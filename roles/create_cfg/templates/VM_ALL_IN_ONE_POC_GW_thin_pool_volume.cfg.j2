#
# Data disk format configuration file
#
# Specify docker pool size
# docker pool size is 400G
# autoextend threshold is 80 percent
# autoextend percentage is 20 percent
#docker_pool=400G,80,20,null
var_log=5G,/var/log,0755,remap,ext4,defaults
var_log_audit=10G,/var/log/audit,0750,remap,ext4,defaults
var_tmp=5G,/var/tmp,1777,remap,ext4,defaults,nosuid,nodev,noexec
var_lib_docker=5G,/var/lib/docker,0700,remap,ext4,defaults
home=5G,/home,0755,remap,ext4,defaults,nodev
usr_local_etc=1G,/usr/local/etc,0755,remap,ext4,defaults
containers=40G,/var/lib/containers,0755,remap,xfs,defaults
DGtmp=10G,/DGtmp,0755,null,xfs,defaults
# MODIFIED: Use 'is defined' to safely check for the variable's existence
DGdata={{ DGdata ~ 'G' if DGdata is defined else '65%VG' }},/DGdata,0755,null,ext4,defaults
# MODIFIED: Use 'is defined' to safely check for the variable's existence
DGlogs={{ DGlogs ~ 'G' if DGlogs is defined else '10%VG' }},/DGlogs,0755,null,ext4,defaults
Database={{ Database | default(100, true) }}G,/Database,0755,null,ext4,defaults
GridGainDrFs={{ GridGainDrFs | default(20, true) }}G,/GridGainDrFs,0755,null,ext4,defaults
GridGainWal={{ GridGainWal | default(20, true) }}G,/GridGainWal,0755,null,ext4,defaults
GridGainData={{ GridGainData | default(50, true) }}G,/GridGainData,0755,null,ext4,defaults
CouchIndex={{ couchindex | default(10, true) }}G,/CouchIndex,0755,null,ext4,defaults
CouchData={{ couchdata | default(50, true) }}G,/CouchData,0755,null,ext4,defaults
PostgresData={{ PostgresData | default(5, true) }}G,/PostgresData,0755,null,ext4,defaults
PostgresWal={{ PostgresWal | default(5, true) }}G,/PostgresWal,0755,null,ext4,defaults
Recordings={{ Recordings | default(5, true) }}G,/Recordings,0755,null,ext4,defaults
